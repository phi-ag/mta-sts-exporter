{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":semanticCommits",
    "config:best-practices",
    "group:monorepos",
    "group:recommended"
  ],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/actions/golangci-lint/action\\.yml$"],
      "matchStrings": ["version: v(?<currentValue>.*?)\\n"],
      "depNameTemplate": "github.com/golangci/golangci-lint",
      "datasourceTemplate": "go"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/workflows/release-please\\.yml$"],
      "matchStrings": [
        "KO_DEFAULTBASEIMAGE: (?<depName>[^:\n]+):(?<currentValue>[^@\n]+)(@(?<currentDigest>sha256:[a-f0-9]+))?\\n"
      ],
      "autoReplaceStringTemplate": "KO_DEFAULTBASEIMAGE: {{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}\n",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
